{
  "name": "free-music-finder",
  "private": true,
  "version": "1.0.0",
  "description": "wagenhoffer.dev Free Music Finder for Creative Commons Bandcamp music (no build tooling)",
  "scripts": {
    "version-assets": "node scripts/version-assets.js",
    "start": "npm run version-assets && node server.js",
    "dev": "npm run version-assets && node server.js",
    "sync:urls": "node scripts/sync-upstream-urls.js",
    "sync:urls:check": "node scripts/sync-upstream-urls.js --check",
    "check:urls": "node scripts/check-urls-integrity.js",
    "deploy:live": "bash scripts/deploy-live.sh",
    "deploy:live:dry": "bash scripts/deploy-live.sh --dry-run"
  },
  "engines": {
    "node": ">=18"
  }
}
